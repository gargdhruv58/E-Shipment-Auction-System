<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".winner_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView104"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="You Won!!"
            android:gravity="center"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView204"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView104"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Please Contact Customer for Further Details :"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView304"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/textView204"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Customer Id"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView504"
            android:layout_below="@+id/textView304"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:text="THANK YOU!!"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20sp"/>

    </RelativeLayout>
</ScrollView>